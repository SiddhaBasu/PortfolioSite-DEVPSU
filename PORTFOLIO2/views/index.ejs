<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Include Tailwind CSS and other stylesheets -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" />
    <title>Your Portfolio</title>
</head>
<body class="font-sans bg-gray-100">
    <!-- Navbar -->
    <nav class="bg-blue-500 p-4">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/" class="text-white text-2xl font-bold">Logo</a>
            <div class="hidden md:flex space-x-4">
                <a href="/projects" class="text-white">Projects</a>
                <a href="/contact" class="text-white">Contact</a>
            </div>
            <!-- Mobile Menu Button -->
            <button class="md:hidden text-white">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
            </button>
        </div>
    </nav>

    <!-- Mobile Menu -->
    <div class="md:hidden fixed inset-0 bg-gray-600 bg-opacity-75 z-50 hidden">
        <div class="flex justify-end p-4">
            <button class="text-white">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
            </button>
        </div>
        <div class="container mx-auto p-4">
            <a href="/projects" class="block text-white py-2">Projects</a>
            <a href="/contact" class="block text-white py-2">Contact</a>
        </div>
    </div>

    <!-- Hero Section -->
    <section class="container mx-auto mt-8 px-4">
        <div class="bg-blue-500 p-8 rounded-md text-white text-center">
            <h1 class="text-4xl font-bold mb-4">Welcome to My Portfolio</h1>
            <p class="text-lg">A showcase of my work and skills</p>
        </div>
    </section>

    <!-- About Me Section -->
    <section class="container mx-auto mt-8 flex justify-center items-center flex-col md:flex-row px-4">
        <div class="max-w-md bg-white p-8 rounded-md shadow-md mb-4 md:mr-4">
            <p class="text-xl text-gray-700">
                Hi, I'm [Your Name], a passionate developer. Explore my projects and feel free to reach out!
            </p>
        </div>
        <!-- Portfolio Picture Section -->
        <div class="w-full md:w-1/3">
            <img src="/images/portfolio-picture.jpg" alt="Portfolio Picture" class="w-full rounded-md shadow-md">
        </div>
    </section>

    <!-- Initialize the mobile menu toggle -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var mobileMenuButton = document.querySelector('.md:hidden');
            var mobileMenu = document.querySelector('.md:hidden + div');

            mobileMenuButton.addEventListener('click', function() {
                mobileMenu.classList.toggle('hidden');
            });
        });
    </script>
</body>
</html>
