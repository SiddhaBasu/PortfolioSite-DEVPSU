<!-- views/projects.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <title>CS Projects</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
</head>
<body>

    <!-- Navbar -->
    <div class="w3-top">
        <div class="w3-bar w3-black w3-card">
            <a class="w3-bar-item w3-button w3-padding-large w3-hide-medium w3-hide-large w3-right" href="javascript:void(0)" onclick="myFunction()" title="Toggle Navigation Menu"><i class="fa fa-bars"></i></a>
            <a href="/" class="w3-bar-item w3-button w3-padding-large">ABOUT ME</a>
            <a href="/projects" class="w3-bar-item w3-button w3-padding-large w3-hide-small">PROJECTS</a>
            <a href="/" class="w3-bar-item w3-button w3-padding-large w3-hide-small">RESUME</a>
            <a href="/" class="w3-bar-item w3-button w3-padding-large w3-hide-small">CONTACT</a>
            <div class="w3-dropdown-hover w3-hide-small">
            <button class="w3-padding-large w3-button" title="More">MORE <i class="fa fa-caret-down"></i></button>     
            </div>
            <a href="javascript:void(0)" class="w3-padding-large w3-hover-red w3-hide-small w3-right"><i class="fa fa-search"></i></a>
        </div>
    </div>

    <!-- Page content -->
    <div class="w3-content" style="max-width:800px;margin-top:46px">
        <div class="w3-container w3-content w3-center w3-padding-64">
            <h2 class="w3-wide">CS Projects</h2>
        
            <% projects.forEach((project) => { %>
                <div class="w3-card-4 w3-margin w3-padding">
                    <img src="<%= project.image %>" alt="<%= project.title %>" style="width:100%">
                    <h3><%= project.title %></h3>
                    <p><%= project.description %></p>
                    <a href="<%= project.link %>" class="w3-button w3-black">Learn More</a>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Footer -->
    <footer class="w3-container w3-padding-64 w3-center w3-opacity w3-light-grey w3-xlarge">
        <!-- ... (your existing footer code) ... -->
    </footer>

    <!-- ... (your existing scripts and other content) ... -->

</body>
</html>
